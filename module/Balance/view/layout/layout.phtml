<?php
    // Linguagem
    $language = strtolower(str_replace('_', '-', locale_get_default()));
    // Navigation
    $navigation = $this->navigation('navigation');
?>
<?php echo $this->doctype('HTML5') ?>
<html lang="<?php echo $this->escapeHtml($language) ?>">
    <head>
        <?php
            $this->headMeta()
                ->setCharset('UTF-8')
                ->appendName('viewport', 'width=device-width, initial-scale=1');
            echo $this->headMeta();
        ?>
        <?php
            $this->headTitle()
                ->setSeparator(' - ')
                ->append('Balance');
            echo $this->headTitle();
        ?>
        <?php
            $this->headLink()
                ->headLink(array('rel' => 'shortcut icon', 'href' => $this->basePath('/images/favicon.ico'), 'type' => 'image/x-icon'))
                ->prependStylesheet($this->basePath('/module/Balance/assets/default/css/default.css'))
                ->prependStylesheet($this->basePath('/assets/jqueryui/themes/smoothness/jquery-ui.min.css'))
                ->prependStylesheet($this->basePath('/assets/bootstrap/dist/css/bootstrap-theme.min.css'))
                ->prependStylesheet($this->basePath('/assets/bootstrap/dist/css/bootstrap.min.css'));
            echo $this->headLink();
        ?>
        <?php
            $this->headScript()
                ->prependFile($this->basePath('/module/Balance/assets/default/js/default.js'))
                ->prependFile($this->url('configs'))
                ->prependFile($this->basePath('/module/Balance/assets/jquery-application/js/jquery-application.js'))
                ->prependFile($this->basePath('/assets/bootstrap/dist/js/bootstrap.min.js'))
                ->prependFile($this->basePath('/assets/jqueryui/jquery-ui.min.js'))
                ->prependFile($this->basePath('/assets/jquery/dist/jquery.min.js'));
            echo $this->headScript();
        ?>
    </head>
    <body>
        <?php echo $navigation->menu()->setPartial('layout/navigation') ?>
        <div class="container-fluid">
            <?php echo $navigation->breadcrumbs()->setPartial('layout/breadcrumbs') ?>
            <?php echo $this->partial('layout/flashmessenger') ?>
            <?php echo $this->content ?>
        </div>
    </body>
</html>
